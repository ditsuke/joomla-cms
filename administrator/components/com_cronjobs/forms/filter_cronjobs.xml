<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">

		<!-- Search Box -->
		<field
				name="search"
				type="text"
				inputmode="search"
				label="COM_CRONJOBS_FILTER_SEARCH_LABEL"
				description="COM_TAGS_FILTER_SEARCH"
				hint="JSEARCH_FILTER"
		/>
		<!-- Might want to change either this or db -->
		<field
				name="state"
				type="status"
				label="JSTATUS"
				onchange="this.form.submit();"
		>
			<!-- TODO: ADD ENABLED, DISABLED OPTIONS -->
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<!-- Filter by access level -->
		<field
				name="access"
				type="accesslevel"
				label="JGRID_HEADING_ACCESS"
				onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>
		<!-- Filter by cronjob type-->
		<field
				name="type"
				type="list"
				label="COM_CRONJOBS_HEADING_JOB_TYPE"
				onchange="this.form.submit();"
		>
			<option value="">COM_CRONJOBS_SELECT_TYPE</option>
			<option value="script">COM_CRONJOBS_TYPE_SCRIPT</option>
			<option value="plugin">COM_CRONJOBS_TYPE_PLG</option>
		</field>
	</fields>

	<!--THE SORT_BY LIST -->
	<fields name="list">
		<!-- TODO: Add options for execution date(s) -->
		<field
				name="fullordering"
				type="list"
				label="JGLOBAL_SORT_BY"
				onchange="this.form.submit();"
				default="a.title DESC"
				validate="options"
		>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.title ASC">JGLOBAL_TITLE_ASC</option>
			<option value="a.title DESC">JGLOBAL_TITLE_DESC</option>
			<option value="a.last_exit_code ASC">COM_CRONJOBS_EXIT_CODE_ASC</option>
			<option value="a.last_exit_code DESC">COM_CRONJOBS_EXIT_CODE_DESC</option>
			<option value="j.type_title ASC">COM_CRONJOBS_JOB_TYPE_ASC</option>
			<option value="j.type_title DESC">COM_CRONJOBS_JOB_TYPE_DESC</option>
		</field>
		<field
				name="limit"
				type="limitbox"
				label="JGLOBAL_LIST_LIMIT"
				default="25"
				onchange="this.form.submit();"
		/>
	</fields>
</form>
